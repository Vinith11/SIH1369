<%- include("partials/header") -%>
<%- include("navbar") -%>

<div class="album my-3 py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            <!-- <%- include("items") -%> -->

            <% if(itemList.length != 0){ %>
                <% itemList.forEach(function(item){ %>
                    <div class="col">
                        <div class="card shadow-sm">
                                <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="img/<%= item.image.data %>" role="img" alt="<%= item.image.data %>">
                            <div class="card-body">
                                <p class="card-text"><%= item.name %></p>
                                <p class="card-text description-overflow"><%= item.description %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="/projects/<%= item._id %>" class="btn btn-sm btn-outline-secondary">Details</a>
                                    </div>
                                    <small class="text-body-secondary">Price : <span class="fw-bold"> <%= item.price %>â‚¹ </span></small>
                                    <small class="text-body-secondary">Time: <span class="fw-bold"> <%= item.timeneeded %> </span></small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% }else{ %>
                <h1>No Items for sale </h1>
            <% } %>

        </div>
    </div>
</div>

<%- include("partials/footer") -%>
