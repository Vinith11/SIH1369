    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <div class="collapse navbar-collapse d-flex justify-content-evenly" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <form action="/subject" method="post" class="container">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Subjects
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item btn" type="submit" name="subject" href="/home">All</a></li>
                                <li><button class="dropdown-item" type="submit" name="subject" value="Electronics">Electronics</button></li>
                                <li><button class="dropdown-item" type="submit" name="subject" value="WebDev">Web develoment</button></li>
                                <li><button class="dropdown-item" type="submit" name="subject" value="ML">Machine Learning</button></li>
                            </ul>
                        </li>
                    </form>
                    <form action="/grade" method="post" class="container">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Grade
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item btn" type="submit" name="subject" href="/home">All</a></li>
