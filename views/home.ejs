                </ul>
                <div class="d-flex justify-content-evenly">
                    <!-- <form class="d-flex me-2" role="search" action="usn" method="post">
                        <input class="form-control me-2" type="search" name="usn" placeholder="Search by USN" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">USN</button>
                    </form> -->
                    <form class="d-flex" role="search" action="college" method="post">
                        <input class="form-control me-2" type="search" name="college" placeholder="Search by College" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">College</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>
</div>

<div class="album my-3 py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            <!-- <%- include("items") -%> -->
            <% console.log(itemList) %>

            <% if(itemList.length != 0){ %>
                <% itemList.forEach(function(item){ %>
                    <div class="col">
                        <div class="card shadow-sm">
                                <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="img/<%= item.image.data %>" role="img" alt="<%= item.image.data %>">
                            <div class="card-body">
                                <p class="card-text"><%= item.name %></p>
                                <p class="card-text description-overflow"><%= item.description %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="/projects/<%= item._id %>" class="btn btn-sm btn-outline-secondary">Details</a>
                                    </div>
                                    <small class="text-body-secondary">College : <span class="fw-bold"> <%= item.college %> </span></small>
                                    <small class="text-body-secondary">Date: <span class="fw-bold"> <%= new Date(item.createdAt).toLocaleDateString() %> </span></small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% }else{ %>
                <h1>No Items available </h1>
            <% } %>

        </div>
    </div>
</div>

<%- include("partials/footer") -%>
